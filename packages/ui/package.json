{
  "name": "@lococo/ui",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./*": "./src/*.tsx",
    "./styles.css": "./dist/index.css"
  },
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit",
    "build:styles": "tailwindcss -i ./styles.css -o ./dist/index.css",
    "build:components": "tsc",
    "dev:styles": "tailwindcss -i ./styles.css -o ./dist/index.css --watch",
    "dev:components": "tsc --watch"
  },
  "devDependencies": {
    "@lococo/eslint-config": "workspace:*",
    "@lococo/tailwind-config": "workspace:*",
    "@lococo/typescript-config": "workspace:*",
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/postcss": "^4.1.10",
    "@turbo/gen": "^2.5.0",
    "@types/node": "^22.15.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "clsx": "^2.1.1",
    "eslint": "^9.29.0",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.10",
    "typescript": "5.8.2"
  }
}
